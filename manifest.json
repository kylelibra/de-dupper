{
  "manifest_version": 3,
  "name": "Duplicate Tab Closer",
  "version": "1.0",
  "description": "Automatically close duplicate tabs with one click",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Close Duplicate Tabs"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
